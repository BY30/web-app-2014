extends layout

block content	
	section.page.home#home
		.nav-wrapper
		nav.navbar.navbar-default(role='navigation')
					ul.nav.navbar-nav.pull-left.left-nav
						li: a(href='#home'): span(href='#home') Home
						li: a(href='#about'): span(href='#about') About
						li: a(href='#speakers'): span(href='#speakers') Speakers
					ul.nav.navbar-nav.pull-right.right-nav
						li: a(href='#venue'): span(href='#venue') Venue
						li: a(href='#team'): span(href='#team') Team
						li: a(href='#contact'): span(href='#contact') Contact
					.navbar-header.centre
						a.navbar-brand(href='/')
					.navbar-header.centre.menu
						a.navbar-brand.alternative-trigger(href='#')
		ul.nav.nav-pills.nav-stacked.alternative-navigation.pull-right
			li: a(href='#home'): span(href='#home') Home
			li: a(href='#about'): span(href='#about') About
			li: a(href='#speakers'): span(href='#speakers') Speakers
			li: a(href='#venue'): span(href='#venue') Venue
			li: a(href='#team'): span(href='#team') Team
			li: a(href='#contact'): span(href='#contact') Contact
		.title-bottom
			span.big-number THREE
			span.medium-text influential speakers
			span.big-number.gray THIRTY
			span.medium-text.gray minutes each
	section.page.about#about
		.content
			- for item in aboutData
				- if (item.type == 'h2')
					h1.normal #{item.content}
				- else
					p #{item.content}
	section.page.speakers#speakers
		.speakers-header
			h1.big-text Speakers
		.content
			.session.container-fluid
				h1.session-date October 2013
				.col-xs-4.column
					.cover
					h1.tile-title Alex Haw
					.tile
					img.speaker(src='images/speakers/oct2013/alex_haw.jpg')
				.col-xs-4.column
					.cover
					h1.tile-title Ben Street
					.tile
					img.speaker(src='images/speakers/oct2013/ben_street.jpg')
				.col-xs-4.column
					.cover
					h1.tile-title Irena Bauman
					.tile
					img.speaker(src='images/speakers/oct2013/irena_bauman.jpg')
			.session.container-fluid
				h1.session-date November 2013
				.col-xs-4.column
					.cover
					h1.tile-title Jeremy Till
					.tile
					img.speaker(src='images/speakers/nov2013/jeremy_till.jpg')
				.col-xs-4.column
					.cover
					h1.tile-title Nicola Read
					.tile
					img.speaker(src='images/speakers/nov2013/nicola_read.jpg')
				.col-xs-4.column
					.cover
					h1.tile-title Jonathan Foyle
					.tile
					img.speaker(src='images/speakers/nov2013/jonathan_foyle.jpg')
	section.page.venue#venue
		.venue-header
			h1.big-text Venue
		.content
			h1.normal The Engine House
			p The Engine House is a unique space inside one of Manchester’s oldest mill buildings. The high-quality conversion combines original architectural features, modern facilities and even Burgess’s own furniture and musical instruments to create a distinctive location for your event.
			p Established as a welcoming and professional venue we have recently hosted performances with: Manchester Camerata, Psappha, Euros Childs, Ethan Johns, Liam Frost, Momus and Outfit; readings by Iain Sinclair, Chuck Palahniuk, Jonathan Meades and Simon Armitage; conferences, workshops and away-days for Manchester Metropolitan University, Manchester City Council, The Audience Agency and the Performing Arts Network and Development Agency, plus featured as a venue for the Manchester Literature Festival, Manchester Science Festival and Manchester Comedy Festival.
	section.page.team#team
		.content
			h1.normal The Team
			p Before You’re 30 (BY30) was founded in January 2013 and has since become MSA’s most popular informal lecture series. All our events are free of charge and attract some fantastic speakers from around the country. Keep updated with our monthly events through our Facebook and our Twitter.
	section.page.contact#contact
		.content
			h1.normal Contact Us
			.container-fluid.inline-block.contact-panel
				.col-md-6.contact-form
					p If you would like to find out even more about BY30, have a general enquiry or simply want to say hi, feel free to get in touch using the form below
					form
						.form-group
							input.form-control#name(type='text', name='name', placeholder='Your name')
						.form-group
							input.form-control#email(type='email', name='email', placeholder='Your e-mail')
						.form-group
							textarea.form-control(name='message', placeholder='Your message')
						button.btn.btn-success.send-button(type='button', name='send') Send
				.col-md-6.alternative-contact
					p ...or you can visit us every Wednesday between 9:00 and 10:00 
					address
						strong Chatham Building
						br
						| Manchester Metropolitan University All Saints Campus
						br
						| M15 6LL, Manchester
						br
						| Greater Manchester, United Kingdom
					p: strong General contact details:
					address
						a(href='mailto:beforeyoure30@gmail.com') beforeyoure30@gmail.com
						br
						a(href='http://mssa.msa.ac.uk') mssa.msa.ac.uk
	section.page.footer
		.content
			.container-fluid.inline-block
				.col-md-4.partners
					h4 Partners
					img.logo(src='images/logo/mssa.png')
					img.logo(src='images/logo/msa.png')
				.col-md-4.sponsors
					h4 Sponsors
					img.logo(src='images/logo/bdp.png')
				.col-md-4
					h4 Social
					.fb-container
						.fb-like.fb-like-button(data-href='https://www.facebook.com/beforeyourethirty', data-layout='button_count', data-action='like', data-show-faces='false', data-share='true')
					a.fb-link(href='https://www.facebook.com/beforeyourethirty')
						img.small-logo(src='images/fb.png')
					a.fb-link(href='https://twitter.com/beforeyoure30')
						img.small-logo(src='images/tw.png')
			p.copyright &copy; Copyright 2014 
				a(href='mailto:onea.alex@gmail.com') Alexandru Onea
				| .